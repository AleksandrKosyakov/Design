<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Задание_1__вариант_2_">
    <Style x:Key="Тёмные кнопки" TargetType="Button">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="#FF5F5F5F"/>
        <Setter Property="BorderBrush" Value="#FF5F5F5F"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>

    <Style x:Key="Зелёные кнопки" TargetType="Button">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="#FF05BF05"/>
        <Setter Property="BorderBrush" Value="#FF05BF05"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>

</ResourceDictionary>